{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "public",
  "functions": {
    "api-build/*.js": {
      "includeFiles": "api-build/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/cron",
      "destination": "/api-build/cron.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api-build/index.js"
    }
  ]
}
